<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="book.mapper.BookMapper">
    <select id="borrowBook" resultType="java.lang.Boolean">
        select * from book
    </select>

    <resultMap id="bookResult" type="book.entity.Book">
        <result column="book_id" property="bookId"/>
        <result column="book_name" property="bookName"/>
        <result column="book_author" property="bookAuthor"/>
        <result column="isbn" property="ISBN"/>
        <result column="stock" property="stock"/>
    </resultMap>

    <select id="searchByPage" resultMap="bookResult">
        select * from book where book_name=#{bookName} and book_author=#{bookAuthor}
    </select>

</mapper>